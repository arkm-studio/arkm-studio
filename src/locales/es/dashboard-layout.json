{
  "meta": {
    "version": "1.0",
    "lastUpdated": "2025-01-22",
    "description": "Configuración del diseño del panel que incluye navegación, búsqueda y gestión de usuarios",
    "maintainer": "Equipo de Desarrollo"
  },
  "header": {
    "search": {
      "config": {
        "placeholder": "Buscar proyectos, tareas, archivos...",
        "label": "Buscar",
        "buttonText": "Buscar",
        "loadingText": "Cargando...",
        "debounceMs": 300,
        "minSearchLength": 2
      },
      "categories": {
        "project": {
          "label": "Proyectos",
          "icon": "folder",
          "priority": 1
        },
        "task": {
          "label": "Tareas",
          "icon": "check-square",
          "priority": 2
        },
        "file": {
          "label": "Archivos",
          "icon": "file",
          "priority": 3
        }
      },
      "results": {
        "empty": {
          "message": "No se encontraron resultados",
          "suggestion": "Prueba con otras palabras clave o explora las categorías"
        },
        "error": {
          "message": "Error al obtener los resultados",
          "action": "Reintentar"
        },
        "maxItems": 10,
        "groupByCategory": true
      }
    },
    "user": {
      "menu": {
        "options": [
          {
            "id": "profile",
            "label": "Ver Perfil",
            "icon": "user",
            "href": "/dashboard/account/profile",
            "type": "link"
          },
          {
            "id": "settings",
            "label": "Configuración",
            "icon": "settings",
            "href": "/dashboard/settings",
            "type": "link"
          },
          {
            "id": "divider1",
            "type": "divider"
          },
          {
            "id": "signout",
            "label": "Cerrar Sesión",
            "icon": "logout",
            "type": "action"
          }
        ]
      },
      "roles": {
        "types": {
          "admin": {
            "label": "Administrador",
            "level": 1,
            "permissions": ["todo"]
          },
          "manager": {
            "label": "Gerente",
            "level": 2,
            "permissions": ["gestionar_equipo", "gestionar_proyectos"]
          },
          "productOwner": {
            "label": "Propietario del Producto",
            "level": 2,
            "permissions": ["gestionar_productos", "ver_analíticas"]
          },
          "developer": {
            "label": "Desarrollador",
            "level": 3,
            "permissions": ["gestionar_código", "gestionar_tareas"]
          },
          "designer": {
            "label": "Diseñador",
            "level": 3,
            "permissions": ["gestionar_diseños", "gestionar_recursos"]
          },
          "user": {
            "label": "Usuario",
            "level": 4,
            "permissions": ["ver_asignados"]
          }
        },
        "default": "user"
      },
      "status": {
        "types": {
          "online": {
            "label": "En Línea",
            "icon": "circle"
          },
          "offline": {
            "label": "Fuera de Línea",
            "icon": "circle"
          },
          "away": {
            "label": "Ausente",
            "icon": "clock"
          },
          "busy": {
            "label": "Ocupado",
            "icon": "minus-circle"
          },
          "inMeeting": {
            "label": "En Reunión",
            "icon": "video"
          }
        },
        "default": "online",
        "autoUpdate": true
      },
      "accessibility": {
        "labels": {
          "userMenu": "Menú de Usuario",
          "userAvatar": "Avatar de Usuario",
          "userSettings": "Configuración del Usuario",
